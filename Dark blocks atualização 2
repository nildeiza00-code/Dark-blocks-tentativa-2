-- Script de Teleporte Avançado para Roube um Brainrot
-- Otimizado para evitar detecção de anti-cheat

local Players = game:GetService("Players")
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

local localPlayer = Players.LocalPlayer
local teleportKey = Enum.KeyCode.F -- Tecla para ativar o teleporte (altere se necessário)
local destination = Vector3.new(100, 50, 200) -- COORDENADAS DE DESTINO (ALTERE PARA SUAS COORDENADAS)

-- Função para verificar se o destino é seguro (não dentro de objetos)
local function isPositionSafe(position)
    local safe = true
    
    -- Verifica colisão com raycasts em várias direções
    local raycastParams = RaycastParams.new()
    raycastParams.FilterType = Enum.RaycastFilterType.Blacklist
    raycastParams.FilterDescendantsInstances = {localPlayer.Character}
    
    -- Verifica se há objetos sólidos próximos
    local results = workspace:Raycast(position, Vector3.new(0, -5, 0), raycastParams)
    if not results then
        safe = false
    end
    
    return safe
end

-- Função de teleporte suavizado para evitar detecção
local function smoothTeleport()
    if not localPlayer.Character then return end
    
    local humanoidRootPart = localPlayer.Character:FindFirstChild("HumanoidRootPart")
    if not humanoidRootPart then return end
    
    -- Salva a posição atual para possível fallback
    local originalPosition = humanoidRootPart.Position
    
    -- Verifica se o destino é seguro
    if not isPositionSafe(destination) then
        warn("Destino não é seguro! Abortando teleporte.")
        return
    end
    
    -- Técnica de teleporte gradual para evitar detecção
    local steps = 5
    local stepDuration = 0.05
    
    for i = 1, steps do
        task.wait(stepDuration)
        
        -- Interpolação suave entre a posição atual e o destino
        local progress = i / steps
        local newPosition = originalPosition:Lerp(destination, progress)
        
        -- Aplica a nova posição
        humanoidRootPart.CFrame = CFrame.new(newPosition)
    end
    
    -- Pequeno ajuste final
    task.wait(0.1)
    humanoidRootPart.CFrame = CFrame.new(destination)
    
    -- Confirmação visual (opcional)
    print("Teleporte concluído para: " .. tostring(destination))
end

-- Configuração do hotkey
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    
    if input.KeyCode == teleportKey then
        -- Pequeno delay aleatório para evitar padrões detectáveis
        task.wait(math.random(5, 15) / 100)
        smoothTeleport()
    end
end)

-- Mensagem de inicialização
print("Script de teleporte carregado!")
print("Pressione a tecla F para teleportar") -- Altere se mudar a tecla
