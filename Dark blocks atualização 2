-- Teleporte avançado com GUI
-- Funciona em executores: Delta, Synapse, Arceus X

local player = game.Players.LocalPlayer
local UIS = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- Configurações do teleporte
local pathLength = 12 -- distância total
local stepCount = 10  -- "quantidade de passos" (ajusta a velocidade)
local stepDelay = 0.07 -- tempo de cada passo

-- Função: ligar/desligar colisão
local function disableCollision(character, state)
    for _, part in pairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = not state
        end
    end
end

-- Função: teleporte suave
local function SmoothTeleport()
    local char = player.Character or player.CharacterAdded:Wait()
    local root = char and char:FindFirstChild("HumanoidRootPart")
    if not root then return end

    -- Desativa colisão
    disableCollision(char, false)

    -- Calcula posição final
    local dir = root.CFrame.LookVector
    local targetPos = root.Position + dir * pathLength

    -- Cria movimento Tween
    local tweenInfo = TweenInfo.new(
        stepCount * stepDelay, -- duração total
        Enum.EasingStyle.Linear,
        Enum.EasingDirection.Out
    )
    local tweenGoal = {CFrame = CFrame.new(targetPos)}
    local tween = TweenService:Create(root, tweenInfo, tweenGoal)
    tween:Play()
    tween.Completed:Wait()

    -- Reativa colisão
    disableCollision(char, true)
end

-- CORREÇÃO: Remover GUI existente de forma segura
local function safeRemoveGUI()
    local playerGui = player:FindFirstChild("PlayerGui")
    if playerGui then
        local existingGUI = playerGui:FindFirstChild("TeleGUI")
        if existingGUI then
            existingGUI:Destroy()
        end
    end
end

-- CORREÇÃO: Criar a GUI de forma segura
local function createGUI()
    safeRemoveGUI()
    
    local playerGui = player:WaitForChild("PlayerGui")
    
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "TeleGUI"
    ScreenGui.Parent = playerGui
    ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 180, 0, 60)
    Frame.Position = UDim2.new(0.5, -90, 0.8, 0)
    Frame.BackgroundColor3 = Color3.fromRGB(33, 33, 40)
    Frame.BorderSizePixel = 0
    Frame.AnchorPoint = Vector2.new(0.5, 0)
    Frame.Parent = ScreenGui
    Frame.Active = true
    Frame.Draggable = false

    local Button = Instance.new("TextButton")
    Button.Size = UDim2.new(1, -24, 1, -24)
    Button.Position = UDim2.new(0, 12, 0, 12)
    Button.BackgroundColor3 = Color3.fromRGB(80, 120, 80)
    Button.TextColor3 = Color3.fromRGB(230, 255, 230)
    Button.Font = Enum.Font.GothamBold
    Button.TextSize = 22
    Button.Text = "TELEPORTAR"
    Button.Parent = Frame
    Button.AutoButtonColor = true -- CORREÇÃO: Garantir que é clicável

    -- CORREÇÃO: Conectar o clique do botão DE FORMA SEGURA
    local connection
    connection = Button.MouseButton1Click:Connect(function()
        -- Desconectar temporariamente para evitar múltiplos cliques
        connection:Disconnect()
        SmoothTeleport()
        -- Reconectar após execução
        task.wait(0.5)
        connection = Button.MouseButton1Click:Connect(function()
            connection:Disconnect()
            SmoothTeleport()
            task.wait(0.5)
            connection = Button.MouseButton1Click:Connect(function() end)
        end)
    end)

    -- CORREÇÃO: Sistema de arrastar melhorado
    local dragging = false
    local dragInput, dragStart, startPos

    local function updateInput(input)
        dragInput = input
    end

    Frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = Frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    Frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            updateInput(input)
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            Frame.Position = UDim2.new(
                startPos.X.Scale, 
                startPos.X.Offset + delta.X, 
                startPos.Y.Scale, 
                startPos.Y.Offset + delta.Y
            )
        end
    end)

    return ScreenGui
end

-- CORREÇÃO: Hotkey T com verificação de segurança
UIS.InputBegan:Connect(function(input, processed)
    if processed then return end
    if input.KeyCode == Enum.KeyCode.T then
        SmoothTeleport()
    end
end)

-- CORREÇÃO: Criar a GUI quando o player estiver pronto
if player.Character then
    createGUI()
else
    player.CharacterAdded:Connect(function()
        task.wait(1) -- Esperar o personagem carregar completamente
        createGUI()
    end)
end

-- CORREÇÃO: Recriar GUI se o PlayerGui for resetado
player.PlayerGui.ChildAdded:Connect(function(child)
    if child:IsA("ScreenGui") and child.Name ~= "TeleGUI" then
        task.wait(1)
        createGUI()
    end
end)
